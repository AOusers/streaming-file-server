<div class="container-fluid">
<h3 class="panel panel-heading">{{#files.isEmpty}}nothing for {{/files.isEmpty}}download</h3>
  {{^files.isEmpty}}
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <td>&check;</td>
          <td>size</td>
          <td>updated</td>
          <td>absolute path</td>
        </tr>
        </thead>
        {{#files}}
          <tr>
            <td>
              {{#isFile}}
                <a href="{{ctx}}/{{downloadUrl}}/{{id}}" class="glyphicon glyphicon-download"/>
              {{/isFile}}
            </td>
            <td>
              <span class="text-muted">{{prettySize}}</span>
            </td>
            <td>
              <span class="text-muted">{{updatedAt.getMonth.name.toLowerCase}} {{updatedAt.getDayOfMonth}}, {{updatedAt.getYear}} at {{updatedAt.getHour}}:{{updatedAt.getMinute}}:{{updatedAt.getSecond}}</span>
            </td>
            <td class="col-sm-10">
              <span class="text-muted">{{filename}}</span>
            </td>
          </tr>
        {{/files}}
      </table>
    </div>
  {{/files.isEmpty}}
</div>
